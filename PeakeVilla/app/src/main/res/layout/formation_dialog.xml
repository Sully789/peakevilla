<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/formation_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:id="@+id/formation_scrollview"
        android:layout_width="wrap_content"
        android:layout_below="@+id/formation_image"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/formation_textview"
            android:id="@+id/formation_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </ScrollView>

    <Button
        android:id="@+id/back_to_formation"
        android:layout_below="@id/formation_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/back_to_formation" />

</RelativeLayout>